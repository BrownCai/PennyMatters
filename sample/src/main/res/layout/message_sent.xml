<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/transparent">

    <View
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@color/transparent"/>

    <TextView
        android:id="@+id/text_message_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:padding="14dp"
        android:textColor="@color/white"
        android:background="@drawable/message_sent_bg"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@id/empty_view"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:gravity="end"/>

    <TextView
        android:id="@+id/text_time_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_message_sent"
        android:textColor="#CC000000"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="2dp"
        android:background="@color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>