<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/transparent">

    <View
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@color/transparent"/>

    <ImageView
        android:id="@+id/message_icon"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:background="@mipmap/app_icon"
        tools:ignore="MissingConstraints"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/text_message_deleted"/>

    <TextView
        android:id="@+id/text_message_deleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toEndOf="@id/message_icon"
        android:layout_marginStart="8dp"
        android:background="@drawable/message_deleted_bg"
        android:padding="14dp"
        android:textSize="14dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>

<!--    <ImageView-->
<!--        android:id="@+id/cancel_button"-->
<!--        android:layout_width="40dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:scaleType="centerCrop"-->
<!--        tools:ignore="MissingConstraints"-->
<!--        app:layout_constraintEnd_toEndOf="@id/text_message_received"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/text_message_received"-->
<!--        android:src="@mipmap/cancel"-->
<!--        android:clickable="true"/>-->

    <TextView
        android:id="@+id/text_time_deleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toEndOf="@id/message_icon"
        app:layout_constraintTop_toBottomOf="@id/text_message_deleted"
        android:textColor="#CC000000"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:layout_marginStart="9dp"
        android:background="@color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>