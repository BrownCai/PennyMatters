<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context=".bottomNavigationUi.recordFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/record_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@mipmap/top_background"
        app:title="@string/record_button"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/toolbarTextStyle"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/record_background"
        android:scaleType="fitCenter"
        android:layout_below="@id/record_toolbar"
        android:layout_above="@id/bottom_adding_toolbar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_record_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_adding_toolbar"
        android:layout_below="@id/record_toolbar"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <RelativeLayout
        android:id="@+id/bottom_adding_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/item_et_bg"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/text2_bg"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@id/price_et_bg"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/shop_et"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:background="#00000000"
            android:textSize="16sp"
            android:hint="Shop "
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/separator_left"/>

        <View
            android:id="@+id/separator_left"
            android:layout_width="2px"
            android:layout_height="44dp"
            android:background="@color/theme1"
            android:layout_toLeftOf="@id/item_et"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/item_et"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/separator_right"
            android:background="#00000000"
            android:textSize="16sp"
            android:hint="Item"
            android:gravity="center"/>

        <View
            android:id="@+id/separator_right"
            android:layout_width="2px"
            android:layout_height="44dp"
            android:background="@color/theme1"
            android:layout_toLeftOf="@id/amount_et"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/amount_et"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/price_et"
            android:background="#00000000"
            android:layout_marginEnd="22dp"
            android:textSize="16sp"
            android:hint=" Amt"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/price_et_bg"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:src="@drawable/text2_bg"
            android:layout_marginRight="0dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/send_button"/>


        <EditText
            android:id="@+id/price_et"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:background="#00000000"
            android:textSize="16sp"
            android:hint="Price"
            android:gravity="center"
            android:layout_toLeftOf="@id/send_button"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/send_icon6"
            android:layout_alignParentEnd="true"
            android:clickable="true"/>
    </RelativeLayout>


