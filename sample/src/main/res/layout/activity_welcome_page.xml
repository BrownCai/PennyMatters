<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="preparationPages.welcomePage"
    android:background="@mipmap/welcome_background">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:backgroundTint="@color/grey_translucent"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/countDown_text"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16dp"
            android:text="3s"/>

    </androidx.cardview.widget.CardView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/app_icon"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="PennyMatters"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to PennyMatters"
        android:gravity="right"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's manage your expenditure"
        android:gravity="right"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wisely"
        android:gravity="right"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/golden"/>

</LinearLayout>